<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardCornerRadius="12dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/home_gradient_1">

        <TextView
            android:id="@+id/txt_type_test"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="اختبار قبلي"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/app_margin"
            android:layout_marginEnd="@dimen/app_margin"
            style="@style/AppbarTitle"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/txt_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="النتيجه 10/5"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="@dimen/app_margin"
            style="@style/largeText"
            android:textColor="@color/white"
            app:layout_constraintTop_toBottomOf="@+id/txt_type_test"
            android:layout_marginTop="@dimen/normal_margin"/>

        <TextView
            android:id="@+id/txt_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/normalText"
            android:textColor="@color/white"
            tools:text="10/5/2021"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_result"
            android:layout_marginBottom="@dimen/low_margin"
            android:textStyle="bold"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>